<!DOCTYPE html>
<html lang="en">
  <body>
    <div class="container">
      <div class="row">
        <%= form_with model: @bus_stop, local: true do |form| %> 
          <% if @bus_stop.errors.any? %>
            <div id="error_explanation">
              <h2>
                <%= pluralize(@bus_stop.errors.count, "error") %> prohibited
                this bus_stop from being saved:
              </h2>
              <ul>
                <% @bus_stop.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="row">
            <div class="col s4">
              <h4>Identifier </h4>
                <%= form.number_field :identifier, :value => @bus_stop.identifier %>
            </div>
          </div>
          <%= form.submit("Submit Bus Stop", class: "waves-effect waves-light btn-large") %>
        <% end %>
      </div>
    </div>
  </body>
</html>