<div class="container">
  <div class="row">
    <ul class="collection with-header">
      <li class="collection-header">
        <div>
          <h4>Trips</h4>
        <div>
      </li>
      <% @trips.each do |trip| %>
      <li class="collection-item">
        <div>
          <%= trip.identifier %>
          <a href=<%= edit_trip_path(trip) %> class="secondary-content">
            <i class="material-icons">mode_edit</i>
          </a>
          <%= link_to 'delete', 
             trip_path(trip), 
                         method: :delete, 
                         data: { confirm: 'Are you sure?' },
                         class: "secondary-content material-icons" %>
        </div>
      </li>
      <% end %>
    </ul>

    <a href=<%= new_trip_path %> class="btn-floating btn-large waves-effect waves-light"><i class="material-icons">add</i></a>
  </div>
</div>





